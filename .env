# ================================
# LibreNMS Configuration
# ================================

# Timezone
TZ=Asia/Bangkok

# User/Group IDs
PUID=1000
PGID=1000

# ================================
# LibreNMS Settings
# ================================
LIBRENMS_HOSTNAME=librenms.local
LIBRENMS_PORT=8000

# Base URL (ถ้าใช้ reverse proxy ให้ระบุ URL ภายนอก)
APP_URL=http://localhost:8000

# Session settings
SESSION_DRIVER=redis
CACHE_DRIVER=redis

# ================================
# Database Configuration
# ================================
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=librenms
MYSQL_USER=librenms
MYSQL_PASSWORD=your_secure_password_here

# ================================
# Redis Configuration
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ================================
# Email/SMTP Configuration
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=on
SMTP_STARTTLS=on
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=librenms@yourdomain.com

# Email notification settings
MAIL_DRIVER=smtp
MAIL_FROM_ADDRESS=librenms@yourdomain.com
MAIL_FROM_NAME=LibreNMS

# ================================
# Syslog Configuration
# ================================
SYSLOG_UDP_PORT=514
SYSLOG_TCP_PORT=514

# ================================
# SNMP Trap Configuration
# ================================
SNMPTRAP_PORT=162

# ================================
# Poller/Discovery Settings
# ================================
# จำนวน workers สำหรับ dispatcher
DISPATCHER_WORKERS=4

# Polling interval (วินาที)
LIBRENMS_POLLER_INTERVAL=300

# Discovery interval (วินาที)
LIBRENMS_DISCOVERY_INTERVAL=21600

# ================================
# Security Settings
# ================================
# Application key (ระบบจะสร้างให้อัตโนมัติครั้งแรก)
APP_KEY=

# Admin user (สำหรับการสร้าง user แรก)
LIBRENMS_ADMIN_USER=admin
LIBRENMS_ADMIN_PASSWORD=admin
LIBRENMS_ADMIN_EMAIL=admin@localhost

# ================================
# Advanced Settings
# ================================
# Memory limit
MEMORY_LIMIT=256M

# Max execution time
MAX_EXECUTION_TIME=300

# Upload max filesize
UPLOAD_MAX_SIZE=16M

# Enable/Disable features
LIBRENMS_WEATHERMAP=false
LIBRENMS_WEATHERMAP_SCHEDULE=*/5 * * * *

# ================================
# Backup Configuration
# ================================
# ถ้าต้องการ backup อัตโนมัติ
LIBRENMS_BACKUP_ENABLED=false
LIBRENMS_BACKUP_RETENTION=7
